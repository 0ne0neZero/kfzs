<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wishare.finance.domains.configure.chargeitem.repository.mapper.FinancialTaxInfoMapper">


    <select id="getListByTaxRateAndTaxTypeId"
            resultType="com.wishare.finance.domains.configure.chargeitem.entity.FinancialTaxInfo">
        select *
        from financial_tax_info
        where tax_type_id = #{taxTypeId}
          and enable = 1
          and applicable_tax_rate in
          <foreach collection="taxRateList" item="item" open="(" separator="," close=")">
              #{item}
          </foreach>
    </select>

</mapper>

