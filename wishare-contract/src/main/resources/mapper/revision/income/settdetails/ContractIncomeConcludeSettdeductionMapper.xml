<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wishare.contract.domains.mapper.revision.income.settdetails.ContractIncomeConcludeSettdeductionMapper">
    <!-- 表字段展示 ,xml不会在表字段更新后更新，
    可以从javadoc中获取到最新的表字段列表-->
    <!-- id,settlementId,typeId,type,amount,chargeItemId,chargeItem,tenantId,
    creator,creatorName,gmtCreate,operator,operatorName,gmtModify,deleted
     -->
    <resultMap id="settPeriod" type="com.wishare.contract.domains.vo.revision.income.settdetails.ContractIncomeSettdeductionDetailV">
        <result column="belongRegion" property="belongRegion"/>
        <result column="communityName" property="communityName"/>
        <result column="name" property="name"/>
        <result column="oppositeOne" property="oppositeOne"/>
        <result column="realIncomeAmount" property="realIncomeAmount"/>
        <result column="typeId" property="typeId"/>
        <result column="amount" property="amount"/>
        <collection property="periods"
                    javaType="java.util.List"
                    ofType="com.wishare.contract.domains.entity.revision.income.ContractIncomeConcludeSettlementPeriodE">
            <result column="startDate" property="startDate"/>
            <result column="endDate" property="endDate"/>
        </collection>
    </resultMap>
    <delete id="deleteBySettlementId">
        update contract_income_conclude_settdeduction
        set deleted = 1
        where settlementId = #{settlementId}
    </delete>

    <select id="contractIncomeSettdeductionDetailPage" resultMap="settPeriod">
        select
            b.belongRegion,
            c.communityName,
            c.name,
            c.oppositeOne,
            b.plannedCollectionAmount - b.deductionAmount as realIncomeAmount,
            d.start_date startDate,
            d.end_date endDate,
            a.typeId,
            a.amount
        from contract_income_conclude_settdeduction a
                 left join contract_income_conclude_settlement b on a.settlementId = b.id and b.deleted = 0
                 left join contract_income_conclude c on b.contractId = c.id and c.deleted = 0
                 left join contract_income_conclude_settlement_period d on a.settlementId = d.settlement_id
        where a.settlementId in
        <foreach collection="settlementIds" item="settlementId" open="(" close=")" separator=",">
            #{settlementId}
        </foreach>
        and a.deleted = 0
    </select>
</mapper>
